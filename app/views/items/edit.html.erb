<h1>Onedari編集</h1>
<%= form_for @item do |f| %>
 <%= render "layouts/error_messages", model: f.object %>
 <% if @item.image? %>
   <%= image_tag @item.image.url, alt: "Item image", :width => "20%", :height => "auto" %>
 <% else %>
   <%= image_tag "default.jpg", alt: "item image", :width => "20%", :height => "auto" %>
 <% end %>
   <button type="button" class="btn btn-outline-secondary rounded-pill">
     <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
   </button>
 <p>
   <%= f.label(:name, "名前") %>
   <%= f.text_field :name %>
 </p>
 <p>
   <%= f.label(:url, "URL") %>
   <%= f.text_field :url %>
 </p>
 <p>
   <%= f.label(:price, "プライス") %>
   <%= f.text_field :price %>
 </p>
 <p>
   <%= f.label(:comment, "コメント") %>
   <%= f.text_field :comment %>
 </p>

 <%= f.submit "編集完了" %>
<% end %>