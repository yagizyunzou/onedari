<% if users.any? %>
    <% users.each do |user| %>
      <div class="card sm-3" style="max-width: 540px">
        <div class="row no-gutters">
          <div class="col-sm-4 my-auto">
            <% if user.image? %>
              <%= image_tag user.image.to_s, alt: "User image", :width => "50%", :height => "auto" %>
            <% else %>
              <%= image_tag "default.jpg", alt: "User image", :width => "50%", :height => "auto" %>
            <% end %>
          </div>
          <div class="col-sm-8">
            <div class="card-body">
              <h4 class="card-title"><%= user.name %></h4>
              <p class="card-text"><%= user.comment %></p>
              <p><%= link_to 'プロフィール', user_path(user) %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
<% end %>