<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <div class="media-body">
          <div>
            <% if user.image? %>
              <%= image_tag user.image.to_s, :size => "100x100" %>
            <% else %>
              <%= image_tag "default.jpg", :size => "100x100" %>
            <% end %>
            <%= user.name %>
            <%= user.comment %>
          </div>
          <div>
            <p><%= link_to 'プロフィール', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>